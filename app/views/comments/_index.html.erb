<table class="display data-table" >
  <thead>
    <th>#</th>
    <th>Name</th>
    <th>Email</th>
    <th>Body</th>
    <th></th>
    <th></th>
  </thead>

<% comments.each_with_index do |comment, index| %>
<tbody>
  <tr>
    <td><%= index + 1 %></td>
    <td><%= comment.name %></td>
    <td><%= comment.email %></td>
    <td><%= comment.body %></td>
    <td><%= link_to 'Edit', edit_article_comment_path(@article,comment), :remote => true %></td>
    <td><%= link_to 'Delete', article_comment_path(@article, comment), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
  </tbody>
<% end %>
</table>

<br />
<%= link_to 'New Comment', new_article_comment_path(@article), :remote => true%>
